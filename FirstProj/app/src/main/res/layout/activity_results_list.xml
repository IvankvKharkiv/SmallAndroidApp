<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsList">

    <ListView
        android:id="@+id/listView_CategoryResults"
        android:layout_width="346dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Previouse_Ten"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Previouse_Ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="btn_Previouse_Ten_Click"
        android:text="Previouse 10 Res"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Nex_Ten_Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="btn_Next_Ten_Res_OnClick"
        android:text="Next 10 Res"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Lable_PageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Result page #"
        app:layout_constraintEnd_toStartOf="@+id/btn_Nex_Ten_Results"
        app:layout_constraintStart_toEndOf="@+id/btn_Previouse_Ten"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_PageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_Nex_Ten_Results"
        app:layout_constraintStart_toEndOf="@+id/btn_Previouse_Ten"
        app:layout_constraintTop_toBottomOf="@+id/tv_Lable_PageNum" />
</androidx.constraintlayout.widget.ConstraintLayout>